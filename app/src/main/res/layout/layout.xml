<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    > <TextView
    android:id="@+id/pos_nme"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="pos_name:" />

    <TextView
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="experience:" />
    <TextView
        android:id="@+id/sal"
        android:layout_below="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sal_range:" />
    <TextView
        android:id="@+id/location"
        android:layout_below="@+id/sal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location:" />
    <TextView
        android:id="@+id/keyskills"
        android:layout_below="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="key_skills:" />
    <TextView
        android:id="@+id/createddate"
        android:layout_below="@+id/keyskills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="createddate:" />
    <TextView
        android:id="@+id/name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pos_nme"
        android:text="name" />
    <TextView
        android:id="@+id/exp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/experience"
        android:text="exp" />
    <TextView
        android:id="@+id/sal1"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sal"
        android:text="sal" />
    <TextView
        android:id="@+id/loc"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/sal1"
        android:layout_toRightOf="@id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loc" />
    <TextView
        android:id="@+id/skills"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/keyskills"
        android:layout_height="wrap_content"
        android:text="skills" />
    <TextView
        android:id="@+id/date"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/createddate"
        android:layout_height="wrap_content"
        android:text="date" />

</RelativeLayout>